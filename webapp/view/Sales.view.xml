<mvc:View
    xmlns:layout="sap.ui.layout"
    controllerName="com.incture.project1.controller.Sales"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="Sales View"
        showNavButton="true"
        navButtonPress="onPress"
    >
        <content>
            <layout:VerticalLayout>
                <VBox
                    width="100vw"
                    alignItems="Center"
                >
                    <List
                        items="{/products}"
                        headerText="Sales"
                        width="80vw"
                    >
                        <ObjectListItem
                            title="{name}"
                            type="Active"
                            number="{price}"
                            numberState="{= ${price} > 80? 'Success': 'Error'}"
                            numberUnit="{net}"
               
                        >
                        </ObjectListItem>
                    </List>
                </VBox>
            </layout:VerticalLayout>
        </content>
    </Page>
</mvc:View>
