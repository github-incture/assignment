<mvc:View
    xmlns:layout="sap.ui.layout"
    controllerName="com.incture.project1.controller.XMLBinding"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="This is the second Control (VBox,SimpleForm)"
        showNavButton="true"
        navButtonPress="onPress"
    >
        <content>
            <layout:VerticalLayout>
                <VBox
                    width="100vw"
                    alignItems="Center"
                >
                    <List
                        headerText="Employee Salary Data"
                        headerLevel="H2"
                        width="90vw"
                        items="{
			path: 'data>/'
		}"
                    >
                        <StandardListItem
                            title="{data>name}"
                            counter="{data>salary}"
                        />
                    </List>
                </VBox>
            </layout:VerticalLayout>
        </content>
        <footer>
            <Bar>
                <contentRight>
                    <Button text="Go to xml Binding" type="Emphasized"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
