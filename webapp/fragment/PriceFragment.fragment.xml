<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog id="helloDialog" title='{name}'>
        <VBox width="40vw" >
        <HBox width="100%"
        class="sapUiResponsiveContentPadding"
        >
            <Label text="Price : $" design="Bold"/>
            <Label text="{price}"></Label>
        </HBox>
        <HBox width="100%"
        class="sapUiResponsiveContentPadding"
        justifyContent="Center"
        alignItems="Center"
        >
            <Label text="Enter the Discount% : " design="Bold"/>
            <Input type="Number" id="value"></Input>
        </HBox>
        <HBox width="100%"
        class="sapUiResponsiveContentPadding"
        justifyContent="Center"
        alignItems="Center"
        >
        <Button text="Submit" press="submit"></Button>
        </HBox>

        </VBox>
        <endButton>
        <Button text="Close" press="closeDialog"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
